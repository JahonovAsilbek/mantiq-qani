<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#3C3F41"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:gravity="center"
        app:layout_goneMarginTop="25dp"
        android:text="Вы действительно хотите \n удалить очки ?"
        android:textColor="@android:color/white"
        android:id="@+id/delete_dialog_title"
        android:textSize="22sp"
        android:layout_width="350dp"
        android:layout_height="70dp" />

    <Button
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/answer_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/delete_ok_btn"
        app:layout_constraintTop_toBottomOf="@id/delete_dialog_title"
        android:id="@+id/delete_cancel_btn"
        android:text="Нет"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textAllCaps="false"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

    <Button
        android:layout_marginTop="35dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/answer_back"
        app:layout_constraintLeft_toRightOf="@id/delete_cancel_btn"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/delete_dialog_title"
        android:id="@+id/delete_ok_btn"
        android:text="Да"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textAllCaps="false"
        app:layout_constraintVertical_bias="0.85"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            app:layout_constraintBottom_toTopOf="@id/scores"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="Меню"
            android:textAllCaps="false"
            android:id="@+id/title_menu"
            android:layout_margin="1dp"
            android:gravity="center"
            android:textSize="28sp"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_title"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="350dp"
            android:layout_height="70dp" />

        <Button
            app:layout_constraintTop_toBottomOf="@id/title_menu"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_margin="1dp"
            android:text="Очки"
            android:gravity="center"
            android:textAllCaps="false"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_back"
            android:id="@+id/scores"
            android:layout_width="350dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/scores"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Настройки"
            android:gravity="center"
            android:layout_margin="1dp"
            android:textSize="22sp"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_back"
            android:id="@+id/settings"
            android:layout_width="350dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/settings"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="О программе"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="@drawable/answer_back"
            android:textAllCaps="false"
            android:id="@+id/about"
            android:layout_margin="1dp"
            android:layout_width="350dp"
            android:layout_height="70dp"/>

        <Button
            app:layout_constraintTop_toBottomOf="@id/about"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="Назад"
            android:gravity="center"
            android:textSize="22sp"
            android:textColor="@android:color/white"
            android:background="@drawable/menu_title"
            android:id="@+id/cancel"
            android:layout_margin="1dp"
            android:layout_width="350dp"
            android:textAllCaps="false"
            android:layout_height="70dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
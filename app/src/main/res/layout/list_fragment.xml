<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Очки"
        android:id="@+id/scores_title"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="28sp"
        android:background="@drawable/menu_title"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <ListView
        app:layout_constraintTop_toBottomOf="@id/scores_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/scores_cancel_btn"
        android:background="@drawable/answer_back"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

    <Button
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Назад"
        android:textAllCaps="false"
        android:id="@+id/scores_cancel_btn"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:textSize="28sp"
        android:background="@drawable/menu_title"
        android:layout_width="match_parent"
        android:layout_height="70dp" />

</androidx.constraintlayout.widget.ConstraintLayout>